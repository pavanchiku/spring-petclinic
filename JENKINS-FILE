pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'petclinic', url: 'https://github.com/pavanchiku/spring-petclinic.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@172.31.85.120:/opt/tomcat9/webapps/
                    
                    ssh ec2-user@172.31.85.120 /opt/tomcat8/bin/shutdown.sh
                    
                    ssh ec2-user@1172.31.85.120 /opt/tomcat8/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
